<% layout("/layouts/boilerplate.ejs") %>
<style>
  body {
    background: repeating-linear-gradient(90deg, rgba(13, 13, 13,0.09) 0px, rgba(13, 13, 13,0.09) 36px,rgba(229, 229, 229,0.09) 36px, rgba(229, 229, 229,0.09) 72px,transparent 72px, transparent 108px,rgba(163, 163, 163,0.09) 108px, rgba(163, 163, 163,0.09) 144px,rgba(21, 21, 21,0.09) 144px, rgba(21, 21, 21,0.09) 180px),repeating-linear-gradient(90deg, rgba(0,0,0,0.08) 0px, rgba(0,0,0,0.08) 14px,transparent 14px, transparent 28px,rgba(0,0,0,0.08) 28px, rgba(0,0,0,0.08) 42px,transparent 42px, transparent 56px,rgba(0,0,0,0.08) 56px, rgba(0,0,0,0.08) 70px),repeating-linear-gradient(90deg, rgba(0,0,0,0.08) 0px, rgba(0,0,0,0.08) 23px,transparent 23px, transparent 46px,rgba(0,0,0,0.08) 46px, rgba(0,0,0,0.08) 69px,transparent 69px, transparent 92px,rgba(0,0,0,0.08) 92px, rgba(0,0,0,0.08) 115px),repeating-linear-gradient(90deg, rgba(0,0,0,0.04) 0px, rgba(0,0,0,0.04) 6px,transparent 6px, transparent 12px,rgba(0,0,0,0.04) 12px, rgba(0,0,0,0.04) 18px,transparent 18px, transparent 24px,rgba(0,0,0,0.04) 24px, rgba(0,0,0,0.04) 30px),
    linear-gradient(90deg, rgb(234, 90, 58),rgb(53, 71, 236));
    color: #f0f0f0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow-x: hidden;
  }

  @keyframes shine {
    0% {
      background-position: -100px;
    }
    100% {
      background-position: 200px;
    }
  }

  .button-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 40px;
    margin-top: 80px;
    margin-bottom: 40px;
    padding: 0 20px;
  }

  .home-button {
  border-radius: 15px;
  color: #ffffff;
  padding: 40px 45px;
  font-size: 1.6em;
  font-weight: bold;
  text-decoration: none;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
  transition: transform 0.4s ease, box-shadow 0.4s ease, background 0.4s ease;
  perspective: 1000px;
  position: relative;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.home-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -75px;
  width: 50px;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  transform: skewX(-20deg);
  animation: shine 2.5s infinite;
}

.home-button i {
  margin-right: 12px;
}

/* Specific button themes */
.home-button.scan {
  background: linear-gradient(135deg, #00c6ff, #0072ff);
  border: 2px solid #00c6ff;
}

.home-button.scan:hover {
  background: linear-gradient(135deg, #0099cc, #0052cc);
  box-shadow: 0 15px 30px rgba(0, 198, 255, 0.6);
}

.home-button.entries {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
  border: 2px solid #38f9d7;
}

.home-button.entries:hover {
  background: linear-gradient(135deg, #2ecc71, #1abc9c);
  box-shadow: 0 15px 30px rgba(56, 249, 215, 0.6);
}

.home-button.students {
  background: linear-gradient(135deg, #d9385b, #f86700);
  border: 2px solid #f8b500;
}

.home-button.students:hover {
  background: linear-gradient(135deg, #f39c12, #f1c40f);
  box-shadow: 0 15px 30px rgba(248, 181, 0, 0.6);
}


  .hero-section {
    text-align: center;
    padding: 50px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    margin: 30px 20px;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(8px);
  }

.hero-section h1 {
  font-size: 3.2em;
  margin-bottom: 20px;
  color: #ffffff;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4);
}

  .hero-section p {
    font-size: 1.25em;
    line-height: 1.8;
    color: #e0e0e0;
    max-width: 800px;
    margin: 0 auto;
  }

  main {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 20px;
  }
</style>

<main>
  <div class="button-container">
    <a href="/camera" class="home-button scan">
      <i class="fa-solid fa-id-card-clip"></i> Scan ID
    </a>
    <a href="/entryList" class="home-button entries">
      <i class="fa-solid fa-database"></i> Entries
    </a>
    <a href="/list" class="home-button students">
      <i class="fa-solid fa-users-line"></i> Student Info
    </a>
  </div>
  

  <div class="hero-section">
    <h1>Welcome to IIIT Una Entry Management</h1>
    <p>Effortlessly manage campus access with cutting-edge ID-based scanning.</p>
    <p>Use the buttons above to scan IDs, review entry logs, or view student recordsâ€”all in one place with unmatched simplicity and style.</p>
  </div>
</main>
